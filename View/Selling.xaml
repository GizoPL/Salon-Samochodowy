<UserControl x:Class="Salon_samochodowy.View.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Salon_samochodowy.View"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="1010" Background="#FFACACAC">
    <Border Background="#FF31577E" CornerRadius="25"  Margin="10">
        <StackPanel Margin="25" Background="#FF5C99D6" >
            <ListView Margin="10" Height="350">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding UpdateList}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListView>
            <Button Content="Opis pojazdu" Height="40" Width="350" Margin="5"/>
            <Button Content="Sprzedaj" Height="40" Width="350" Margin="5"/>
        </StackPanel>
    </Border>
</UserControl>
