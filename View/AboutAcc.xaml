<Window x:Class="Salon_samochodowy.View.AboutAcc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon_samochodowy.View"
        mc:Ignorable="d"
        Title="Zmiana Hasła" Height="400" Width="400" Background="#FFACACAC"   >
    <Border Background="#FF31577E" CornerRadius="10"  Margin="10">
        <StackPanel Margin="20"  Background="#FF5C99D6" >
            <Label Content="Informacje o koncie" Foreground="White"  FontSize="25" HorizontalAlignment="Center"/>
            <Separator Background="#FF31577E" Height="10"></Separator>
            <Label Content="Imię i Nazwisko" Foreground="White" Margin="5" FontSize="15"/>
            <TextBox Background="#FFACACAC" Foreground="White" FontSize="15" Margin="5" IsEnabled="False"/>
            <Label Content="Identyfikator" Foreground="White" Margin="5" FontSize="15"/>
            <TextBox  Background="#FFACACAC" Foreground="White" FontSize="15"  Margin="5" IsEnabled="False"/>
            <Label Content="Rodzaj użytktownika" Foreground="White" Margin="5" FontSize="15"/>
            <TextBox  Background="#FFACACAC" Foreground="White" FontSize="15"  Margin="5" IsEnabled="False"/>
        </StackPanel>
    </Border>
</Window>
